<% if @article.errors.any? %>
<div class=" text-left mt-2 bg-red-100 border border-red-200 text-sm text-red-800 rounded-lg p-4 dark:bg-red-800/10 dark:border-red-900 dark:text-red-500" role="alert" tabindex="-1" aria-labelledby="hs-soft-color-danger-label">
  

    <h2 class="text-lg text-red-500">Errors</h2>
    <ul>
    <% @article.errors.full_messages.each do |msg| %>
    <li class="text-red-500"><%= msg %></li>
    <% end %>
    </ul>
    </div>
<% end %>